app-card()
    .card-header(card-header='')
        a([routerLink]='["../workshop", workshop.id]')
            figure
                img([src]='workshop.image')
                figcaption {{workshop.title}}
    ng-container(*ngIf='user && user.id == currentUser.id || isAdmin' )
        .btn-block()
            button.del-btn((click)="deleteWorkshop()" )
                i.icon-bin
            a.edit-btn([routerLink]='["../", workshop.id, "edit"]')
                i.icon-pencil
    .desc-block
         p
            | {{workshop.description}}
            a([routerLink]='["../workshop", workshop.id]') read more
    .tags.row
        .tag(*ngFor="let tag of tags", [id]='"tag-"+tag.seq').
            {{tag.name}}
    .card-footer.row(card-footer='')
        .reactions.row.flex-between
            app-like([likes]='workshop.reactionsCounts.likes', [isActive] = 'likeIt', (likedWorkshop)='liked($event)')
            app-star([stars]='workshop.reactionsCounts.stars', [isActive] = 'likeIt', (favoriteWorkshop)='liked($event)')
            app-uni([unis]='workshop.reactionsCounts.uni', [isActive] = 'likeIt', (uniWorkshop)='liked($event)')
        app-timestamp([timestamp]='workshop.createdAt', [onlyDate]='true')

