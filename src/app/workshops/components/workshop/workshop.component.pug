app-viewport
    div(main="")
        ng-container(*ngIf='workshop$ | async as workshop')
            .tags.row
                .tag(*ngFor="let tag of tags$ | async", [id]='"tag-"+tag.seq').
                    {{tag.name}}
            .header
                h1 {{workshop.title}}
            figure
                img([src]='workshop.image')

            p {{workshop.text}}
            .footer.row.columns
                .row.flex-right
                    app-timestamp([timestamp]='workshop.createdAt')
                .reactions.row.flex-between
                    app-like([likes]='workshop.reactionsCounts.likes', [isActive] = 'likeIt', (likedWorkshop)='liked($event)')
                    app-star([stars]='workshop.reactionsCounts.stars', [isActive] = 'likeIt', (favoriteWorkshop)='liked($event)')
                    app-uni([unis]='workshop.reactionsCounts.uni', [isActive] = 'likeIt', (uniWorkshop)='liked($event)')
            .row.back
                a.btn(routerLink='/workshops/feed') Back to feed
    div(aside="")
        app-aux-panel([auxOpen] = 'auxOpen', [tabs]='tabs')
