app-viewport
    div(main="")
        .items.flex-center(*ngIf = 'users$ | async as users')
            app-quiz-item(*ngFor='let quiz of quizzes$ | async; trackBy: trackByFn;',
            [quiz] = 'quiz',
            [user] = 'users| author:quiz.author',
            [selectedMod] = 'selectedMod',
            [alreadySelected] = 'workshopQuizzesId | workshopQuiz: quiz.id',
            (quizDeleted) = 'deleteQuiz($event)',
            (quizSelected) = 'selectQuiz($event)',
            appTextToColor [text]='quiz.name',
            [colorMap] = '["#ffb628", "#e98ed7", "#93c5e9", "#e4e96c", "#afe56c"]',
            [hoverEffect]='"off"'
            )
    div(aside="")
        app-aux-panel([auxOpen] = 'auxOpen', [tabs] = 'tabs')
